doctype html 
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Drezzstore
    style.

      body {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td  {
        border: 1px solid #ddd;
        padding: 8px;
      }
      th {
        border: 1px solid #ddd;
        padding: 8px;
      }

      tr:nth-child(even){background-color: #f2f2f2;}

      tr:hover {background-color: #ddd;}

      th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #04AA6D;
        color: white;
      }



    table
      tr
        th Name
        th Model
        th Price 
        th Category

      each product in products 

        tr
          td #{product.Name}
          td #{product.Model}
          td #{product.Price}
          td #{product.Category}
